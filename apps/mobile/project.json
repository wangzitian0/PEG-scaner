{
  "name": "mobile",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "mobile/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project mobile --web",
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -p mobile/tsconfig.app.json --noEmit"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx react-native start --port ${MOBILE_DEV_PORT:-8081}",
        "cwd": "apps/mobile"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vite --host 0.0.0.0 --port ${MOBILE_WEB_PORT:-5173}",
        "cwd": "apps/mobile"
      }
    }
  }
}
