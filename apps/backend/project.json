{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend",
  "projectType": "application",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 -m venv apps/backend/.venv && ./apps/backend/.venv/bin/python3 -m pip install -r apps/backend/requirements.txt"
      },
      "outputs": ["{projectRoot}/.venv"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -lc 'PYTHONPATH=apps/backend:libs:. ./apps/backend/.venv/bin/uvicorn apps.backend.main:app --host 0.0.0.0 --port 8000 --reload'"
      },
      "dependsOn": ["install"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash -lc 'PYTHONPATH=apps/backend:libs:. NEO4J_FAKE=1 ./apps/backend/.venv/bin/pytest apps/backend/tests -v'"
      },
      "dependsOn": ["install"]
    }
  }
}
