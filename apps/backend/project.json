{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend",
  "projectType": "application",
  "tags": [],
                  "targets": {
                    "install": {
                      "executor": "nx:run-commands",
                      "options": {
        "command": "python3 -m venv apps/backend/.venv && ./apps/backend/.venv/bin/pip3 install -r apps/backend/requirements.txt"
      },
    "outputs": [
      "{projectRoot}/.venv"
    ]
  },
      "generate-proto": {
        "executor": "nx:run-commands",
        "options": {
        "command": "./apps/backend/.venv/bin/python3 -m grpc_tools.protoc -I=./libs/schema --python_out=./apps/backend/stock_research/generated --grpc_python_out=./apps/backend/stock_research/generated ./libs/schema/stock.proto"
      },
      "dependsOn": ["install"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./apps/backend/.venv/bin/python3 apps/backend/manage.py runserver"
      },
      "dependsOn": ["install"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./apps/backend/.venv/bin/python3 apps/backend/manage.py test"
      },
      "dependsOn": ["install"]
    },
                  "makemigrations": {
                    "executor": "nx:run-commands",
                    "options": {
                      "command": "./apps/backend/.venv/bin/python3 apps/backend/manage.py makemigrations"
                    },
                    "dependsOn": ["install"]
                  },
                  "migrate": {
                    "executor": "nx:run-commands",
                    "options": {
                      "command": "./apps/backend/.venv/bin/python3 apps/backend/manage.py migrate"
                    },
                    "dependsOn": ["install"]
                  },
                      "shell": {
                        "executor": "nx:run-commands",
                        "options": {
                          "command": "./apps/backend/.venv/bin/python3 apps/backend/manage.py shell"
                        },
                        "dependsOn": ["install"]
                      },
                          "fetch-stock-data": {
                            "executor": "nx:run-commands",
                            "options": {
                              "command": "./apps/backend/.venv/bin/python3 apps/backend/manage.py fetch_stock_data AAPL"
                            },
                            "dependsOn": ["install"]
                          }
                        }
                      }
                                                                      
