{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
                  "command": "python3 -m venv .venv && source .venv/bin/activate && pip3 install -r backend/requirements.txt && pip3 install -e backend/"      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "source .venv/bin/activate && python3 backend/src/main.py"
      },
      "dependsOn": ["install"]
    }
  }
}