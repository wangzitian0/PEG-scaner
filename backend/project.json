{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend/src",
  "projectType": "application",
  "tags": [],
      "targets": {
        "install": {
          "executor": "nx:run-commands",
          "options": {
            "command": "pip3 install -r requirements.txt && pip3 install -e ."
          }
        },
        "serve": {
          "executor": "nx:run-commands",
          "options": {
            "command": "python backend/src/main.py"
          },
          "dependsOn": ["install"]
        }
      }
  }
